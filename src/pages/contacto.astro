---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';

import { 
    MapPin, 
    Mail, 
    Phone, 
    Send, 
    Target, 
    Eye,
    Clock,
    ChevronDown,
    ExternalLink, 
    Telescope,
} from 'lucide-react';
---

<Layout title="Contacto">
    
    <Navbar client:load transition:persist />

    <main>
        
        <section class="relative h-screen flex items-start justify-center bg-amazon-900 text-white overflow-hidden pt-55">
            
                <img 
                src="/imags/material_contactos/contacto.jpg" 
                alt="Contacto con Forama" 
                class="absolute inset-0 w-full h-full object-cover transform scale-105"
                />
            
            <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/30 to-black/80 z-0"></div>
            
            <div class="relative z-10 container mx-auto px-4 text-center animate-fade-in-up">
                <span class="inline-block py-1.5 px-4 rounded-full bg-earth-500/20 backdrop-blur-md border border-earth-500/30 text-earth-400 font-bold tracking-widest uppercase text-xs mb-4 shadow-lg">
                    Contactos
                </span>
                
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold mb-4 tracking-tight drop-shadow-xl">
                    Contáctanos
                </h1>
                
                <div class="max-w-3xl mx-auto">
                    <p class="text-xl md:text-3xl text-earth-300 font-serif italic font-light leading-relaxed">
                        Construyendo sostenibilidad desde el corazón del bosque.
                    </p>
                </div>

            </div>
            <div class="absolute bottom-10 z-20 animate-bounce">
                <ChevronDown size={40} className="text-white/70" />
            </div>
        </section>

        <section class="relative z-10 py-24 px-4 bg-stone-50">
                <div class="container mx-auto max-w-6xl">
                    
                    <div class="text-center mb-12 animate-fade-in-up">
                        <span class="inline-block py-1 px-3 rounded-full bg-white shadow-sm text-amazon-600 font-bold uppercase tracking-wider text-xs mb-2 border border-gray-100">
                            Nuestra Esencia
                        </span>
                        <h2 class="text-3xl md:text-5xl font-extrabold text-amazon-90 drop-shadow-sm">
                            Nuestra Brújula
                        </h2>
                    </div>

                    <div class="grid md:grid-cols-2 gap-8">
                        
                        <div class="group relative bg-white rounded-[2.5rem] p-8 md:p-10 shadow-xl transition-all duration-500 hover:-translate-y-3 hover:shadow-earth-500/30 overflow-hidden border border-gray-100">
                            
                            <div class="absolute -top-20 -right-20 w-64 h-64 bg-earth-100/80 rounded-full blur-3xl group-hover:bg-earth-200/80 transition-colors duration-500 animate-pulse"></div>
                            <div class="absolute bottom-0 left-0 w-32 h-32 bg-orange-50 rounded-tr-full opacity-50"></div>

                            <div class="relative z-10">
                                <div class="w-16 h-16 bg-gradient-to-br from-earth-400 to-earth-600 rounded-2xl flex items-center justify-center text-white mb-6 shadow-lg shadow-earth-500/40 group-hover:scale-110 transition-transform duration-300">
                                    <Target size={32} strokeWidth={2} />
                                </div>

                                <h3 class="text-3xl font-extrabold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-earth-600 to-orange-500">
                                    Nuestra Misión
                                </h3>
                                
                                <p class="text-gray-600 leading-relaxed text-lg text-pretty">
                                    FORAMA Amazónica impulsa el desarrollo sostenible en la Amazonía boliviana integrando 
                                    <span class="bg-earth-50 px-1 rounded text-earth-700 font-bold">ciencia, educación, salud y gestión territorial</span>.
                                </p>
                            </div>
                        </div>

                        <div class="group relative bg-white rounded-[2.5rem] p-8 md:p-10 shadow-xl transition-all duration-500 hover:-translate-y-3 hover:shadow-amazon-500/30 overflow-hidden border border-gray-100">
                            
                            <div class="absolute -top-20 -right-20 w-64 h-64 bg-amazon-100/80 rounded-full blur-3xl group-hover:bg-amazon-200/80 transition-colors duration-500 animate-pulse delay-700"></div>
                            <div class="absolute bottom-0 left-0 w-32 h-32 bg-green-50 rounded-tr-full opacity-50"></div>

                            <div class="relative z-10">
                                <div class="w-16 h-16 bg-gradient-to-br from-amazon-400 to-amazon-600 rounded-2xl flex items-center justify-center text-white mb-6 shadow-lg shadow-amazon-500/40 group-hover:scale-110 transition-transform duration-300">
                                    <Telescope size={32} strokeWidth={2} />
                                </div>

                                <h3 class="text-3xl font-extrabold mb-4 bg-clip-text text-transparent bg-gradient-to-r from-amazon-600 to-green-500">
                                    Nuestra Visión
                                </h3>
                                
                                <p class="text-gray-600 leading-relaxed text-lg text-pretty">
                                    Ser una fundación referente en la Amazonía por su impacto verificable en 
                                    <span class="bg-amazon-50 px-1 rounded text-amazon-700 font-bold">conservación, restauración y resiliencia climática</span>.
                                </p>
                            </div>
                        </div>

                    </div>

                </div>
            </section>

        <section class="pb-24 bg-stone-50">
            <div class="container mx-auto px-4 max-w-7xl">
                
                <div class="bg-white rounded-[3rem] shadow-xl border border-gray-100 overflow-hidden">
                    <div class="grid lg:grid-cols-12">
                        
                        <div class="lg:col-span-5 bg-amazon-900 text-white p-10 md:p-16 relative overflow-hidden flex flex-col justify-between">
                            <div class="absolute top-0 left-0 w-full h-full opacity-10 pointer-events-none">
                                <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
                                    <defs>
                                        <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
                                            <path d="M 40 0 L 0 0 0 40" fill="none" stroke="white" stroke-width="1"/>
                                        </pattern>
                                    </defs>
                                    <rect width="100%" height="100%" fill="url(#grid)" />
                                </svg>
                            </div>
                            
                            <div class="relative z-10">
                                <h3 class="text-3xl font-bold mb-2">Información de Contacto</h3>
                                <p class="text-amazon-200 mb-10 text-lg">Aquí nos encuentras siempre.</p>
                                
                                <div class="space-y-8">
                                    <div class="flex items-start gap-5">
                                        <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center shrink-0">
                                            <MapPin size={24} className="text-earth-400" />
                                        </div>
                                        <div>
                                            <h4 class="font-bold text-lg">Visítanos</h4>
                                            <p class="text-amazon-100 text-sm leading-relaxed mt-1">Calle Graciela Pérez N° 055,<br>Barrio Nazaria. Cobija, Pando.</p>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-start gap-5">
                                        <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center shrink-0">
                                            <Mail size={24} className="text-earth-400" />
                                        </div>
                                        <div>
                                            <h4 class="font-bold text-lg">Escríbenos</h4>
                                            <a href="mailto:contacto@forama.org" class="text-amazon-100 text-sm hover:text-white transition-colors block mt-1">contacto@forama.org</a>
                                            <span class="text-xs text-amazon-400">Respuesta en 24-48 hrs</span>
                                        </div>
                                    </div>

                                    <div class="flex items-start gap-5">
                                        <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center shrink-0">
                                            <Clock size={24} className="text-earth-400" />
                                        </div>
                                        <div>
                                            <h4 class="font-bold text-lg">Horario</h4>
                                            <p class="text-amazon-100 text-sm mt-1">Lunes a Viernes</p>
                                            <p class="text-white font-bold">08:30 - 16:30</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="relative z-10 mt-12 pt-12 border-t border-white/10">
                                <p class="text-sm text-amazon-300 italic">"Protegiendo el corazón del bosque desde Pando."</p>
                            </div>
                        </div>

                        <div class="lg:col-span-7 p-10 md:p-16 bg-white">
                            <h3 class="text-3xl font-bold text-gray-900 mb-2">Envíanos un mensaje</h3>
                            <p class="text-gray-500 mb-10">¿Tienes alguna duda o propuesta? Llena el formulario.</p>
                            
                            <form class="space-y-6">
                                <div class="grid md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label for="nombre" class="text-sm font-bold text-gray-700 ml-1">Nombre Completo</label>
                                        <input type="text" id="nombre" class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-amazon-500 focus:bg-white focus:ring-4 focus:ring-amazon-500/10 outline-none transition-all" placeholder="Tu nombre" />
                                    </div>
                                    <div class="space-y-2">
                                        <label for="institucion" class="text-sm font-bold text-gray-700 ml-1">Institución</label>
                                        <input type="text" id="institucion" class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-amazon-500 focus:bg-white focus:ring-4 focus:ring-amazon-500/10 outline-none transition-all" placeholder="Empresa / ONG (Opcional)" />
                                    </div>
                                </div>

                                <div class="grid md:grid-cols-2 gap-6">
                                    <div class="space-y-2">
                                        <label for="email" class="text-sm font-bold text-gray-700 ml-1">Correo Electrónico</label>
                                        <input type="email" id="email" class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-amazon-500 focus:bg-white focus:ring-4 focus:ring-amazon-500/10 outline-none transition-all" placeholder="tucorreo@ejemplo.com" />
                                    </div>
                                    <div class="space-y-2">
                                        <label for="asunto" class="text-sm font-bold text-gray-700 ml-1">Asunto</label>
                                        <div class="relative">
                                            <select id="asunto" class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-amazon-500 focus:bg-white focus:ring-4 focus:ring-amazon-500/10 outline-none transition-all appearance-none cursor-pointer text-gray-600">
                                                <option disabled selected>Selecciona un motivo</option>
                                                <option value="alianzas">Alianzas Institucionales</option>
                                                <option value="donacion">Donación</option>
                                                <option value="voluntariado">Voluntariado</option>
                                                <option value="otros">Otro</option>
                                            </select>
                                            <ChevronDown size={20} className="absolute right-4 top-3.5 text-gray-400 pointer-events-none" />
                                        </div>
                                    </div>
                                </div>

                                <div class="space-y-2">
                                    <label for="mensaje" class="text-sm font-bold text-gray-700 ml-1">Mensaje</label>
                                    <textarea id="mensaje" rows="4" class="w-full px-4 py-3 rounded-xl bg-gray-50 border border-gray-200 focus:border-amazon-500 focus:bg-white focus:ring-4 focus:ring-amazon-500/10 outline-none transition-all resize-none" placeholder="¿Cómo podemos colaborar?"></textarea>
                                </div>

                                <button type="submit" class="w-full md:w-auto px-8 bg-amazon-600 text-white font-bold py-4 rounded-xl shadow-lg hover:bg-amazon-700 hover:-translate-y-1 transition-all flex items-center justify-center gap-2">
                                    Enviar Mensaje <Send size={20} />
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </section>

       <section class="py-24 bg-amazon-900 relative overflow-hidden">
            
            <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(#22c55e 1px, transparent 1px); background-size: 30px 30px;"></div>
            <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-green-500/10 rounded-full blur-[100px] pointer-events-none"></div>

            <div class="container mx-auto px-4 max-w-7xl relative z-10">
                
                <div class="text-center mb-12">
                    <span class="text-green-400 font-bold tracking-widest uppercase text-sm">Territorio Amazónico</span>
                    <h2 class="text-4xl md:text-7xl font-extrabold text-white mt-2">
                        Nuestra Sede en <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-green-400">Pando, Cobija Bolivia</span>
                    </h2>
                </div>

                <div class="grid lg:grid-cols-2 gap-6 lg:gap-8">
                    
                    <div class="relative h-[400px] lg:h-[550px] rounded-[2.5rem] overflow-hidden shadow-2xl border border-white/10 group">
                        
                        <video 
                            autoplay 
                            loop 
                            muted 
                            playsinline 
                            class="absolute inset-0 w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-700"
                        >
                            <source src="/public/videos/capibara.mp4" type="video/mp4" />
                        </video>

                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-black/20"></div>

                        <div class="absolute bottom-8 left-8 right-8">
                            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/20 backdrop-blur-md border border-white/30 text-white text-xs font-bold mb-3">
                                <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></span>
                                En vivo desde el bosque
                            </div>
                            <p class="text-white text-lg md:text-xl font-light leading-relaxed text-pretty">
                                "Operamos desde el corazón de la Amazonía, donde la naturaleza y la comunidad se encuentran."
                            </p>
                        </div>
                    </div>

                    <div class="relative h-[400px] lg:h-[550px] w-full rounded-[2.5rem] overflow-hidden shadow-2xl border-4 border-white/10 group">
                        
                        <iframe 
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31435.32832599727!2d-68.7844!3d-11.0267!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9161a0b6eb06316d%3A0x6a0f67954b3445e0!2sCobija%2C%20Bolivia!5e0!3m2!1ses!2sbo!4v1700000000000!5m2!1ses!2sbo" 
                            width="100%" 
                            height="100%" 
                            style="border:0;" 
                            allowfullscreen="" 
                            loading="lazy" 
                            referrerpolicy="no-referrer-when-downgrade"
                            class="grayscale-[20%] group-hover:grayscale-0 transition-all duration-700"
                        ></iframe>

                       <div class="absolute bottom-6 left-6 md:bottom-12 md:left-12 bg-white/95 backdrop-blur-xl p-6 md:p-8 rounded-3xl shadow-2xl max-w-sm border border-white/60 animate-fade-in-up z-20">

                        <div class="mb-5 border-b border-gray-100 pb-4">
                            <p class="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">Ubicación</p>

                            <div class="flex items-center gap-3">
                                <h4 class="font-extrabold text-amazon-900 text-2xl leading-tight">Pando Cobija</h4>

                                <img
                                    src="/imags/material_contactos/cobija.jpg"
                                    alt="Bandera de Cobija"
                                    class="w-10 h-auto rounded shadow-sm border border-gray-100 object-contain"
                                />

                                <img
                                    src="/imags/material_contactos/pando.svg"
                                    alt="Bandera de Pando"
                                    class="w-10 h-auto rounded shadow-sm border border-gray-100 object-contain"
                                />
                            </div>
                        </div>

                        <div class="space-y-5">
                            <p class="text-gray-600 flex items-start gap-3 text-base leading-relaxed">
                                <MapPin size={22} className="text-amazon-600 shrink-0 mt-0.5" />
                                <span>Calle Graciela Pérez N° 055,<br>Barrio Nazaria.</span>
                            </p>

                            <a href="maps.google.com/1" target="_blank" class="w-full bg-amazon-900 text-white font-bold py-3.5 rounded-xl shadow-md hover:bg-green-600 hover:shadow-green-500/30 transition-all flex items-center justify-center gap-2 group/btn">
                                <span>Ver en Google Maps</span>
                                <ExternalLink size={18} className="group-hover/btn:translate-x-1 transition-transform" />
                            </a>
                        </div>

                    </div>

                    </div>

                </div>

            </div>
        </section>
    </main>


</Layout>