---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';
import { 
    TreePine,       
    ThermometerSun, 
    Sprout,         
    MapPin,         
    Users,          
    Landmark,       
    CheckCircle2,
    Mail, 
    Facebook,
    Twitter,
    Linkedin,
    Instagram,
    ArrowRight
} from 'lucide-react';

const journalData = {
    title: "Forests, Conservation and Society",
    slogan: "Advancing science, policy and practice for resilient forests and societies.",
    description: "Una revista científica internacional revisada por pares, dedicada a avanzar en la investigación interdisciplinaria sobre la conservación de bosques, gestión sostenible y resiliencia socioecológica, con énfasis estratégico en la Amazonía.",
    status: "En Planificación Editorial",
    tematicas: [
        {
            titulo: "Ecología y Gestión Forestal",
            desc: "Estructura, dinámica de bosques tropicales y gestión comunitaria.",
            icon: TreePine,
            bg: "bg-green-50",
            text: "text-green-700",
            border: "border-green-100"
        },
        {
            titulo: "Cambio Climático y Carbono",
            desc: "Stocks de carbono, sistemas MRV y estrategias de mitigación.",
            icon: ThermometerSun,
            bg: "bg-blue-50",
            text: "text-blue-700",
            border: "border-blue-100"
        },
        {
            titulo: "Biodiversidad Amazónica",
            desc: "Conservación de flora y fauna, interacciones y especies amenazadas.",
            icon: Sprout,
            bg: "bg-emerald-50",
            text: "text-emerald-700",
            border: "border-emerald-100"
        },
        {
            titulo: "Teledetección y GIS",
            desc: "Uso de LiDAR, drones e IA para el monitoreo ambiental.",
            icon: MapPin,
            bg: "bg-purple-50",
            text: "text-purple-700",
            border: "border-purple-100"
        },
        {
            titulo: "Dimensiones Sociales",
            desc: "Conocimiento indígena, equidad de género y educación ambiental.",
            icon: Users,
            bg: "bg-rose-50",
            text: "text-rose-700",
            border: "border-rose-100"
        },
        {
            titulo: "Política y Gobernanza",
            desc: "Marcos legales, tenencia de la tierra y desarrollo sostenible.",
            icon: Landmark,
            bg: "bg-amber-50",
            text: "text-amber-700",
            border: "border-amber-100"
        }
    ],
    distintivos: [
        "Perspectiva centrada en la Amazonía",
        "Integración Sociedad-Ambiente",
        "Enfoque Interdisciplinario",
        "Ciencia Aplicada a la Conservación",
        "Acceso Abierto (Open Access)"
    ]
};
---

<Layout title="Revista Científica | Forests, Conservation and Society">
    
    <Navbar client:load transition:persist />

    <main class="bg-stone-50 overflow-hidden">
        
        <section class="relative pt-40 pb-20 lg:pt-52 lg:pb-32 overflow-hidden bg-[#fdfbf7]">
            
            <div class="absolute inset-0 opacity-40 bg-[url('https://www.transparenttextures.com/patterns/cream-paper.png')]"></div>
            
            <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-gradient-radial from-green-900/5 to-transparent rounded-full blur-3xl pointer-events-none transform translate-x-1/3 -translate-y-1/4"></div>
            <div class="absolute bottom-0 left-0 w-[600px] h-[600px] bg-gradient-radial from-earth-500/5 to-transparent rounded-full blur-3xl pointer-events-none transform -translate-x-1/3 translate-y-1/4"></div>

            <div class="container mx-auto px-4 relative z-10">
                <div class="max-w-4xl mx-auto text-center">
                    
                    <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full border border-orange-200 bg-orange-50/50 backdrop-blur-sm mb-10 animate-fade-in-up shadow-sm">
                        <span class="relative flex h-2.5 w-2.5">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-orange-500"></span>
                        </span>
                        <span class="text-[11px] font-bold uppercase tracking-[0.2em] text-orange-800">
                            {journalData.status}
                        </span>
                    </div>

                    <h1 class="font-serif text-5xl md:text-7xl lg:text-8xl text-amazon-950 leading-[0.95] mb-8 animate-fade-in-up delay-100 tracking-tight">
                        Forests, <span class="italic text-earth-600">Conservation</span> <br />
                        and Society
                    </h1>

                    <p class="text-xl md:text-2xl text-gray-600 font-light italic mb-12 max-w-2xl mx-auto animate-fade-in-up delay-200">
                        "{journalData.slogan}"
                    </p>

                    <p class="text-gray-500 leading-relaxed max-w-3xl mx-auto mb-16 animate-fade-in-up delay-300 text-pretty text-lg">
                        {journalData.description}
                    </p>

                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-3xl mx-auto border-t border-b border-gray-200 py-8 animate-fade-in-up delay-500">
                        <div class="text-center">
                            <span class="block text-3xl font-serif font-bold text-amazon-900">Open</span>
                            <span class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Access</span>
                        </div>
                        <div class="text-center border-l border-gray-200">
                            <span class="block text-3xl font-serif font-bold text-amazon-900">Peer</span>
                            <span class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Reviewed</span>
                        </div>
                        <div class="text-center border-l border-gray-200">
                            <span class="block text-3xl font-serif font-bold text-amazon-900">Multi</span>
                            <span class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Lingual</span>
                        </div>
                        <div class="text-center border-l border-gray-200">
                            <span class="block text-3xl font-serif font-bold text-amazon-900">Amazon</span>
                            <span class="text-[10px] uppercase tracking-widest text-gray-400 font-bold">Focus</span>
                        </div>
                    </div>

                </div>
            </div>
        </section>

        <section class="relative -mt-24 z-20 pb-24">
            <div class="container mx-auto px-4 flex justify-center">
                <div class="relative w-[300px] h-[400px] md:w-[380px] md:h-[500px] bg-amazon-950 rounded-r-2xl rounded-l-sm shadow-[0_50px_100px_-20px_rgba(0,0,0,0.5)] transform rotate-1 hover:rotate-0 transition-all duration-700 group cursor-default border-l-4 border-gray-700 overflow-hidden">
                    
                    <div class="absolute left-0 top-0 bottom-0 w-3 bg-gradient-to-r from-white/20 to-transparent z-10"></div>
                    
                    <div class="absolute inset-0 p-8 flex flex-col justify-between bg-[url('https://www.transparenttextures.com/patterns/stardust.png')] opacity-90">
                        
                        <div class="border-b border-white/10 pb-4">
                            <div class="flex justify-between items-start">
                                <span class="text-white/50 text-[10px] uppercase tracking-[0.2em] font-bold">Vol. 01 &bull; 2026</span>
                                <div class="w-8 h-8 rounded-full border border-white/20 flex items-center justify-center text-white/80">
                                    <span class="font-serif italic font-bold">F</span>
                                </div>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <h2 class="font-serif text-4xl md:text-5xl text-white leading-[0.9] mb-4 drop-shadow-lg">
                                Forests,<br/>
                                <span class="text-earth-400 italic">Conservation</span><br/>
                                and Society
                            </h2>
                            <div class="w-16 h-1 bg-amazon-500 mx-auto rounded-full"></div>
                        </div>

                        <div>
                            <p class="text-white/60 text-[10px] uppercase tracking-widest text-center mb-3">Published by FORAMA</p>
                            <div class="flex justify-center gap-3 text-white/30 text-[9px] font-bold uppercase tracking-wider">
                                <span>Ecology</span> &bull; <span>Policy</span> &bull; <span>Society</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="scope" class="py-24 bg-white relative">
            <div class="container mx-auto px-4 max-w-7xl">
                
                <div class="text-center mb-16">
                    <span class="text-amazon-600 font-bold tracking-[0.2em] uppercase text-xs mb-3 block">Alcance Científico</span>
                    <h2 class="font-serif text-3xl md:text-5xl text-amazon-900 mb-6">Áreas Temáticas</h2>
                    <p class="text-gray-500 max-w-2xl mx-auto font-light text-lg">
                        Cubrimos un amplio espectro de disciplinas para abordar la complejidad de los ecosistemas forestales.
                    </p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {journalData.tematicas.map((tema) => {
                        const Icono = tema.icon;
                        return (
                            <div class={`p-8 rounded-[2rem] border ${tema.border} ${tema.bg} hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group`}>
                                <div class={`w-14 h-14 rounded-2xl bg-white flex items-center justify-center ${tema.text} mb-6 shadow-sm group-hover:scale-110 transition-transform`}>
                                    <Icono size={28} />
                                </div>
                                <h3 class="text-xl font-bold text-amazon-900 mb-3 font-serif">{tema.titulo}</h3>
                                <p class="text-gray-600 text-sm leading-relaxed font-medium">
                                    {tema.desc}
                                </p>
                            </div>
                        )
                    })}
                </div>

            </div>
        </section>

        <section class="py-24 bg-amazon-950 text-white relative overflow-hidden">
            <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/carbon-fibre.png')] opacity-10"></div>
            
            <div class="container mx-auto px-4 max-w-6xl relative z-10">
                <div class="grid lg:grid-cols-2 gap-20 items-center">
                    
                    <div>
                        <span class="text-earth-400 font-bold tracking-[0.2em] uppercase text-xs mb-4 block">Valor Diferencial</span>
                        <h2 class="font-serif text-4xl md:text-5xl mb-8 leading-tight">¿Qué nos distingue?</h2>
                        <p class="text-gray-400 leading-relaxed text-lg mb-10">
                            Forests, Conservation and Society busca cerrar la brecha entre la investigación académica, la formulación de políticas públicas y las prácticas en el terreno.
                        </p>
                        
                        <ul class="space-y-5">
                            {journalData.distintivos.map((item) => (
                                <li class="flex items-center gap-4 group">
                                    <div class="w-8 h-8 rounded-full bg-earth-500 flex items-center justify-center shrink-0 group-hover:bg-white transition-colors">
                                        <CheckCircle2 size={16} className="text-amazon-950" />
                                    </div>
                                    <span class="font-medium text-gray-200 group-hover:text-white transition-colors">{item}</span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <div class="relative bg-white/5 border border-white/10 rounded-[2.5rem] p-12 backdrop-blur-sm">
                        <div class="absolute -top-10 -right-10 w-40 h-40 bg-earth-500 rounded-full blur-[80px] opacity-20 pointer-events-none"></div>
                        
                        <h3 class="font-serif text-3xl mb-8 text-white">Audiencia Objetivo</h3>
                        <p class="text-gray-400 text-sm mb-8 leading-relaxed">
                            [cite_start]Esta publicación está dirigida a una comunidad global comprometida con el futuro de los bosques, incluyendo científicos, ONGs y comunidades locales. [cite: 53-59]
                        </p>
                        
                        <div class="flex flex-wrap gap-3">
                            {['Ecólogos Forestales', 'Expertos en Carbono', 'ONGs', 'Tomadores de Decisiones', 'Investigadores Indígenas'].map(tag => (
                                <span class="px-4 py-2 bg-white/10 rounded-xl text-xs font-bold text-earth-300 border border-white/5 hover:bg-white/20 transition-colors cursor-default">
                                    {tag}
                                </span>
                            ))}
                        </div>

                        <div class="mt-10 pt-8 border-t border-white/10 flex items-center justify-between">
                            <div>
                                <span class="block text-[10px] uppercase tracking-widest text-gray-500 mb-1">Publicada por</span>
                                <span class="font-bold text-white text-lg tracking-tight">FORAMA</span>
                            </div>
                            <div class="h-10 w-10 bg-white rounded-full flex items-center justify-center text-amazon-950 font-bold">
                                F
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </section>

    </main>

</Layout>
<script is:inline>
    document.addEventListener('astro:page-load', () => {
        const nav = document.querySelector('nav');
        
        const updateNavStyle = () => {
            if (!nav) return;
            if (window.scrollY < 50) {
                // Arriba: Modo oscuro
                if (!nav.classList.contains('nav-dark-mode')) nav.classList.add('nav-dark-mode');
            } else {
                // Abajo: Modo normal
                if (nav.classList.contains('nav-dark-mode')) nav.classList.remove('nav-dark-mode');
            }
        };

        window.addEventListener('scroll', updateNavStyle, { passive: true });
        updateNavStyle(); 
    });
</script>

<style is:global>
    nav { transition: all 0.3s ease-in-out !important; }
    /* ... tus estilos de nav-dark-mode ... */
    nav.nav-dark-mode { background-color: #063c2e !important; border-bottom: 1px solid rgba(255, 255, 255, 0.1) !important; box-shadow: 0 4px 30px rgba(0,0,0,0.3) !important; }
    nav.nav-dark-mode a, nav.nav-dark-mode button, nav.nav-dark-mode span, nav.nav-dark-mode svg { color: white !important; stroke: white !important; }
    nav.nav-dark-mode div[class*="bg-white"] a, nav.nav-dark-mode div[class*="bg-white"] span, nav.nav-dark-mode div[class*="bg-white"] p { color: #4b5563 !important; }
    nav.nav-dark-mode div[class*="bg-white"] h3 { color: #1f2937 !important; }
    nav.nav-dark-mode button[class*="bg-white"] { color: #dc2626 !important; }
</style>

