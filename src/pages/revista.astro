---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';
import { 
    TreePine,       
    ThermometerSun, 
    Sprout,         
    MapPin,         
    Users,          
    Landmark,       
    CheckCircle2,
    BookOpen,
    FileText,
    Search,
    ArrowRight,
    LockOpen,
    Leaf
} from 'lucide-react';

// --- DATOS ACTUALIZADOS CON EL TEXTO COMPLETO ---
const journalData = {
    title: "Forests, Conservation and Society",
    slogan: "Advancing science, policy and practice for resilient forests and societies.",
    
    // Texto completo de "About the Journal"
    about: [
        "Forests, Conservation and Society is an international, peer-reviewed scientific journal published by the Fundación Flora Amazónica (FORAMA). The journal is dedicated to advancing interdisciplinary research on forest conservation, sustainable management, and socio-ecological resilience, with a particular emphasis on Amazonian forests as globally strategic ecosystems.",
        "The journal provides a platform for high-quality scientific contributions that integrate ecological science, forest management, climate change research, biodiversity conservation, socio-environmental governance, and community-based approaches. We seek to bridge the gap between academic research, public policy formulation, and on-the-ground practices, fostering evidence-based decision-making for forest-dependent regions.",
        "The journal promotes open access to scientific knowledge, recognizing that equitable dissemination of research is essential for strengthening local capacities, supporting public policies, and enhancing global understanding of forest systems under rapid environmental and social change."
    ],

    aims: "Forests, Conservation and Society aims to publish scientifically rigorous and socially relevant research that contributes to the conservation, sustainable management, and restoration of forest ecosystems, particularly in tropical and Amazonian contexts. The journal prioritizes studies that enhance understanding of forest dynamics, ecosystem services, climate change mitigation and adaptation, and the interactions between forests and human well-being.",

    // Scope detallado con viñetas
    scope: [
        {
            category: "Forest Ecology and Sustainable Management",
            icon: TreePine,
            items: [
                "Structure, composition, and dynamics of tropical and subtropical forests",
                "Sustainable forest management systems and reduced-impact logging",
                "Community-based forest management and territorial governance",
                "Forest landscape restoration and ecological connectivity"
            ]
        },
        {
            category: "Climate Change, Carbon and Ecosystem Services",
            icon: ThermometerSun,
            items: [
                "Forest carbon stocks, biomass estimation, and allometric modeling",
                "MRV systems (Monitoring, Reporting and Verification) for forest carbon",
                "Climate change mitigation and adaptation strategies in forest landscapes",
                "Ecosystem services valuation and nature-based solutions"
            ]
        },
        {
            category: "Biodiversity Conservation and Amazonian Resources",
            icon: Sprout,
            items: [
                "Conservation of flora and fauna, including threatened species",
                "Functional diversity, species interactions, and habitat resilience",
                "Non-timber forest products and bioeconomy approaches",
                "Impacts of deforestation, forest degradation, and land-use change"
            ]
        },
        {
            category: "Remote Sensing, Geospatial Analysis and Monitoring",
            icon: MapPin,
            items: [
                "Application of GIS, remote sensing, LiDAR, and UAVs in forest studies",
                "Land-use and land-cover change analysis",
                "Environmental monitoring and early warning systems",
                "Predictive modeling and artificial intelligence applied to forest conservation"
            ]
        },
        {
            category: "Social Dimensions, Indigenous Knowledge and Gender",
            icon: Users,
            items: [
                "Indigenous, campesino, and traditional knowledge systems",
                "Gender equity and the role of women in forest conservation",
                "Social innovation, environmental education, and capacity building",
                "Participatory research and co-production of knowledge"
            ]
        },
        {
            category: "Policy, Governance and Sustainable Development",
            icon: Landmark,
            items: [
                "Forest-related public policies and legal frameworks",
                "Environmental governance, tenure systems, and land-use planning",
                "Science–policy interfaces and decision-support tools",
                "Sustainable development strategies for forest-dependent regions"
            ]
        }
    ]
};
---

<Layout title="Revista Científica | Forests, Conservation and Society">
    
    <Navbar client:load transition:persist />

    <main class="bg-white min-h-screen">
        
        <section class="bg-[#063c2e] text-white pt-32 pb-16 relative overflow-hidden">
            <div class="container mx-auto px-4 max-w-7xl relative z-10">
                <div class="flex flex-col md:flex-row gap-10 items-start">
                    
                    <div class="w-full md:w-[280px] shrink-0">
                        <div class="bg-white p-1 shadow-2xl rotate-0 md:-rotate-1 transition-transform duration-500 hover:rotate-0">
                            <img 
                                src="/imags/material_revista/amazon.jpg" 
                                alt="Portada Forests, Conservation and Society" 
                                class="w-full h-auto object-cover aspect-[3/4]"
                            />
                            <div class="bg-white text-amazon-900 text-center py-2 text-[10px] font-bold uppercase tracking-widest border-t border-gray-100">
                                Vol. 1 • Issue 1 • 2026
                            </div>
                        </div>
                    </div>

                    <div class="flex-1 pt-2">
                        <div class="flex flex-wrap gap-3 mb-6">
                            <span class="bg-white/10 text-white/90 px-3 py-1 text-xs font-bold uppercase tracking-wider rounded-sm backdrop-blur-sm border border-white/20">
                                Open Access
                            </span>
                            <span class="bg-earth-500 text-white px-3 py-1 text-xs font-bold uppercase tracking-wider rounded-sm">
                                Peer Reviewed
                            </span>
                            <span class="bg-white/10 text-white/90 px-3 py-1 text-xs font-bold uppercase tracking-wider rounded-sm backdrop-blur-sm border border-white/20">
                                Enfoque en la Amazonía
                            </span>
                        </div>

                        <h1 class="font-serif text-4xl md:text-6xl font-medium mb-4 leading-tight">
                            Forests, Conservation <br/> and Society
                        </h1>

                        <p class="text-xl text-green-100 font-light italic mb-8 max-w-2xl border-l-4 border-earth-500 pl-4">
                            "{journalData.slogan}"
                        </p>

                        <div class="flex flex-wrap gap-4 mt-8">
                            <button class="bg-white text-[#063c2e] px-6 py-3 font-bold text-sm uppercase tracking-wide hover:bg-gray-100 transition-colors shadow-lg flex items-center gap-2">
                                <FileText size={18} />
                                Submit Your Article
                            </button>
                            <button class="bg-transparent border border-white text-white px-6 py-3 font-bold text-sm uppercase tracking-wide hover:bg-white/10 transition-colors flex items-center gap-2">
                                <BookOpen size={18} />
                                Guide for Authors
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="border-b border-gray-200 sticky top-20 z-40 bg-white/95 backdrop-blur-sm shadow-sm hidden md:block">
            <div class="container mx-auto px-4 max-w-7xl">
                <ul class="flex gap-8 text-sm font-medium text-gray-600">
                    <li class="border-b-2 border-amazon-700 text-amazon-900 py-4 cursor-pointer font-bold">About the Journal</li>
                </ul>
            </div>
        </div>

        <section class="py-16 bg-white">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="grid md:grid-cols-12 gap-12">
                    
                    <div class="md:col-span-8 space-y-12">
                        
                        <div>
                            <h2 class="text-3xl font-serif text-[#063c2e] mb-6 font-bold">About the journal</h2>
                            <div class="prose prose-lg text-gray-700 leading-relaxed text-justify">
                                {journalData.about.map((paragraph, index) => (
                                    <p class="mb-4 font-sans text-base md:text-lg">{paragraph}</p>
                                ))}
                            </div>
                        </div>

                        <div class="bg-gray-50 p-8 rounded-xl border-l-4 border-earth-500">
                            <h3 class="text-xl font-serif font-bold text-gray-900 mb-4">Aims</h3>
                            <p class="text-gray-700 text-base md:text-lg leading-relaxed italic">
                                {journalData.aims}
                            </p>
                        </div>

                        <div>
                            <h3 class="text-2xl font-serif font-bold text-[#063c2e] mb-8 border-b border-gray-100 pb-4">
                                Scope & Thematic Areas
                            </h3>
                            
                            <div class="space-y-10">
                                {journalData.scope.map((area) => {
                                    const Icono = area.icon;
                                    return (
                                        <div class="flex gap-5 items-start group">
                                            <div class="shrink-0 mt-1 p-3 bg-white border border-gray-100 rounded-lg shadow-sm text-amazon-700 group-hover:border-amazon-200 transition-colors">
                                                <Icono size={24} strokeWidth={1.5} />
                                            </div>
                                            
                                            <div class="flex-1">
                                                <h4 class="font-serif text-lg font-bold text-gray-900 mb-3 group-hover:text-amazon-700 transition-colors">
                                                    {area.category}
                                                </h4>
                                                
                                                <ul class="grid md:grid-cols-2 gap-x-8 gap-y-2">
                                                    {area.items.map((item) => (
                                                        <li class="flex items-start gap-2 text-gray-600 text-sm leading-snug">
                                                            <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-earth-400 shrink-0"></span>
                                                            {item}
                                                        </li>
                                                    ))}
                                                </ul>
                                            </div>
                                        </div>
                                    )
                                })}
                            </div>
                        </div>

                        <div class="mt-12">
                             <h3 class="text-2xl font-serif font-bold text-[#063c2e] mb-6">Journal Distinctiveness</h3>
                             <p class="text-gray-600 mb-6">Forests, Conservation and Society distinguishes itself through:</p>
                             <div class="grid md:grid-cols-2 gap-4">
                                {[
                                    "Amazon-focused perspective", 
                                    "Strong integration of society and environment",
                                    "Interdisciplinary scope",
                                    "Community-centered approach",
                                    "Open-access commitment",
                                    "Applied science orientation"
                                ].map(item => (
                                    <div class="flex items-center gap-3 p-3 bg-green-50/50 rounded-lg border border-green-50">
                                        <Leaf size={16} className="text-green-600" />
                                        <span class="text-sm font-bold text-green-900">{item}</span>
                                    </div>
                                ))}
                             </div>
                        </div>

                    </div>


                    <div class="md:col-span-4 space-y-8">
                        
                        <div class="relative group overflow-hidden bg-white p-8 border border-gray-100 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300">
                            <div class="absolute top-0 left-0 w-1.5 h-full bg-gradient-to-b from-[#063c2e] to-emerald-500 group-hover:w-2 transition-all duration-300"></div>
                            <div class="absolute -right-12 -top-12 w-40 h-40 bg-emerald-50 rounded-full blur-3xl group-hover:bg-emerald-100 transition-colors duration-500"></div>
                            <div class="relative z-10">
                                <h3 class="font-serif text-2xl text-[#063c2e] mb-3 font-bold tracking-tight">Editorial Platform</h3>
                                <p class="font-sans text-gray-600 text-sm mb-8 leading-relaxed">
                                    Submission management, peer review, and access to the full editorial board are all handled through our <strong>OJS</strong> system.
                                </p>
                                <a href="#" target="_blank" class="flex items-center justify-between w-full bg-[#063c2e] text-white px-6 py-4 rounded-lg shadow-md hover:bg-emerald-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 group/btn">
                                    <span class="font-sans font-bold text-xs uppercase tracking-widest">Access OJS Platform</span>
                                    <ArrowRight size={18} className="group-hover/btn:translate-x-1 transition-transform"/>
                                </a>
                            </div>
                        </div>

                        <div class="relative group overflow-hidden bg-white p-8 border border-gray-100 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300">
                            <div class="absolute top-0 left-0 w-1.5 h-full bg-gradient-to-b from-orange-500 to-amber-400 group-hover:w-2 transition-all duration-300"></div>
                            <div class="absolute -right-10 -top-10 w-32 h-32 bg-orange-50 rounded-full blur-2xl group-hover:bg-amber-50 transition-colors duration-500"></div>
                            <div class="relative z-10">
                                <h3 class="font-serif text-2xl text-gray-900 mb-6 font-bold tracking-tight">Publishing Options</h3>
                                <div class="mb-6">
                                    <div class="flex items-center gap-3 mb-3">
                                         <div class="p-2 bg-orange-100 text-orange-600 rounded-lg shrink-0">
                                            <LockOpen size={20} strokeWidth={2.5} />
                                         </div>
                                         <span class="font-serif text-lg font-bold text-gray-900">Open Access</span>
                                    </div>
                                    <p class="font-sans text-gray-600 text-sm leading-relaxed">
                                        Articles are freely available to both subscribers and the wider public with permitted reuse.
                                    </p>
                                </div>
                                <div class="bg-gradient-to-br from-stone-50 to-white border border-stone-200 p-4 rounded-xl flex gap-3 items-start group-hover:border-orange-200 transition-colors shadow-sm">
                                    <div class="mt-0.5 text-emerald-600 shrink-0"><CheckCircle2 size={18} strokeWidth={2.5} /></div>
                                    <div>
                                        <span class="block font-sans font-bold text-gray-900 text-[10px] uppercase tracking-widest mb-1">APC Fully Funded</span>
                                        <p class="font-sans text-xs text-gray-600 leading-snug">
                                            Publication costs are fully covered by <strong>FORAMA Foundation</strong> funding for the 2026 period.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </section>

    </main>
</Layout>

<style is:global>
    nav.bg-transparent {
        background-color: #063c2e !important; 
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
</style>