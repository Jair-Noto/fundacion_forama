---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';
import sql from '../lib/db.js'; // <--- IMPORTANTE: Conexión a Base de Datos
import { 
    TreePine,       // Prog 1: Bosque
    ThermometerSun, // Prog 2: Clima
    Microscope,     // Prog 3: Ciencia
    Sprout,         // Prog 4: Producción
    HeartHandshake, // Prog 5: Salud
    Megaphone,      // Prog 6: Comunicación
    Landmark,       // Prog 7: Gobernanza
    Users,          // Prog 8: Género
    Globe2,         // Prog 9: Alianzas
    MapPin, 
    Target, 
    CheckCircle2, 
    FileText,
    ChevronRight,
    ArrowRight,
    ChevronDown 
} from 'lucide-react';

// 1. CONSULTA A BASE DE DATOS
const programasDB = await sql`
  SELECT id, slug, titulo, descripcion 
  FROM programas 
  ORDER BY id ASC
`;

// 2. CONFIGURACIÓN VISUAL (Mapeo ID -> Estilos e Iconos correctos)
const configVisual: any = {
  1: { color: "bg-green-600", border: "border-green-200", bg_icon: "bg-green-50", text_icon: "text-green-600", icon: TreePine, img: "/imags/material_programas/proyect_1.jpg" },
  2: { color: "bg-blue-600", border: "border-blue-200", bg_icon: "bg-blue-50", text_icon: "text-blue-600", icon: ThermometerSun, img: "/imags/material_programas/proyect_2.jpg" },
  3: { color: "bg-indigo-600", border: "border-indigo-200", bg_icon: "bg-indigo-50", text_icon: "text-indigo-600", icon: Microscope, img: "/imags/material_programas/proyect_3.jpg" },
  4: { color: "bg-amber-600", border: "border-amber-200", bg_icon: "bg-amber-50", text_icon: "text-amber-600", icon: Sprout, img: "/imags/material_programas/proyect_4.jpg" },
  5: { color: "bg-rose-600", border: "border-rose-200", bg_icon: "bg-rose-50", text_icon: "text-rose-600", icon: HeartHandshake, img: "/imags/material_programas/proyect_5.jpg" },
  6: { color: "bg-cyan-600", border: "border-cyan-200", bg_icon: "bg-cyan-50", text_icon: "text-cyan-600", icon: Megaphone, img: "/imags/material_programas/proyect_6.jpg" },
  7: { color: "bg-slate-600", border: "border-slate-200", bg_icon: "bg-slate-50", text_icon: "text-slate-600", icon: Landmark, img: "/imags/material_programas/proyect_7.jpg" },
  8: { color: "bg-purple-600", border: "border-purple-200", bg_icon: "bg-purple-50", text_icon: "text-purple-600", icon: Users, img: "/imags/material_programas/proyect_8.jpg" },
  9: { color: "bg-emerald-600", border: "border-emerald-200", bg_icon: "bg-emerald-50", text_icon: "text-emerald-600", icon: Globe2, img: "/imags/material_programas/proyect_9.jpg" }
};

// 3. PROYECTO EJEMPLO (Estático para la sección inferior)
const proyectoEjemplo = {
    nombre: "Restauración de Cuencas Manuripi",
    estado: "En ejecución",
    estadoColor: "bg-green-100 text-green-700 border-green-200",
    zona: "Reserva Manuripi, Pando",
    problema: "Degradación de fuentes de agua debido a la erosión y pérdida de cobertura boscosa en zonas críticas.",
    objetivo: "Recuperar 50 hectáreas de bosque ribereño y garantizar el acceso a agua limpia para 3 comunidades.",
    poblacion: "120 familias de comunidades locales.",
    actividades: [
        "Viveros comunales de especies nativas.",
        "Capacitación en sistemas agroforestales.",
        "Monitoreo de calidad de agua."
    ],
    resultados: "30% de aumento en caudal hídrico y reforestación de zonas críticas.",
    aliados: ["WWF Bolivia", "Municipio de Filadelfia", "Comunidades Locales"]
};
---

<Layout title="Programas y Proyectos">
    
    <Navbar client:load transition:persist />

    <main>
        
        <section class="relative h-screen flex items-center justify-center bg-amazon-900 text-white overflow-hidden">
            <img 
                src="/imags/material_programas/programas_proyectos.jpg" 
                alt="Proyectos en la Amazonía" 
                class="absolute inset-0 w-full h-full object-cover transform scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/10 to-black/60 z-0"></div>
            
            <div class="relative z-10 container mx-auto px-4 text-center animate-fade-in-up">
                <span class="inline-block py-1.5 px-4 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-green-300 font-bold tracking-widest uppercase text-xs mb-8 shadow-lg">
                    Impacto en Terreno
                </span>
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold mb-8 tracking-tight drop-shadow-xl">
                    Programas y Proyectos
                </h1>
                <p class="text-xl md:text-3xl text-gray-200 font-light max-w-3xl mx-auto leading-relaxed text-balance">
                    Estructuramos nuestras acciones bajo 9 programas estratégicos para generar cambios reales en la Amazonía.
                </p>
            </div>

            <div class="absolute bottom-10 z-20 animate-bounce">
                <ChevronDown size={40} className="text-white/70" />
            </div>
        </section>

        <section id="programas" class="py-24 bg-stone-50 scroll-mt-20"> 
            <div class="container mx-auto px-4 max-w-7xl">
                
                <div class="text-center mb-20"> 
                    <h2 class="text-4xl md:text-5xl font-extrabold text-amazon-900 mb-6">Programas Estratégicos</h2>
                    <div class="w-24 h-1.5 bg-earth-500 mx-auto rounded-full mb-6"></div>
                    <p class="text-xl text-gray-600 max-w-2xl mx-auto">La estructura operativa que guía cada uno de nuestros pasos en el territorio.</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {programasDB.map((prog: any) => {
                        const estilo = configVisual[prog.id] || { 
                            color: "bg-gray-600", img: "", icon: TreePine, desc: "" 
                        };
                        const Icono = estilo.icon; // Componente Icono

                        // MODIFICACIÓN 1: ID ÚNICO PARA RETORNO
                        const cardId = `programa-${prog.slug}`;

                        return (
                            <div id={cardId} class="group relative h-[400px] rounded-[2rem] overflow-hidden cursor-pointer shadow-lg hover:shadow-2xl transition-all duration-500 scroll-mt-32">
                                
                                {/* MODIFICACIÓN 2: ENLACE EN LA IMAGEN */}
                                <a href={`/programas/${prog.slug}`} class="block absolute inset-0 z-10 cursor-pointer">
                                    <span class="sr-only">Ver detalles de {prog.titulo}</span>
                                </a>

                                <img 
                                    src={estilo.img} 
                                    alt={prog.titulo} 
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                />
                                
                                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/40 to-transparent opacity-80 group-hover:opacity-90 transition-opacity duration-300 pointer-events-none"></div>

                                <div class="absolute inset-0 p-8 flex flex-col justify-end pointer-events-none">
                                    
                                    <div class={`w-12 h-1.5 ${estilo.color} rounded-full mb-4 transform -translate-x-4 opacity-0 group-hover:translate-x-0 group-hover:opacity-100 transition-all duration-500`}></div>

                                    <h3 class="text-2xl md:text-3xl font-bold text-white mb-2 leading-tight drop-shadow-md">
                                        {prog.titulo}
                                    </h3>
                                    
                                    <p class="text-gray-300 text-lg font-light leading-snug mb-6 opacity-90 line-clamp-3">
                                        {prog.descripcion}
                                    </p>
                                    
                                    <div class="transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-500 delay-100 pointer-events-auto">
                                        <a href={`/programas/${prog.slug}`} class="inline-flex items-center gap-2 text-white font-bold tracking-wide text-sm uppercase border-b-2 border-white/30 pb-1 hover:border-white transition-colors cursor-pointer relative z-20">
                                            Proyectos <ArrowRight size={16} />
                                        </a>
                                    </div>
                                </div>
                            </div>
                        );
                    })}
                </div>

                <div class="mt-16 bg-amazon-900 rounded-[2.5rem] p-12 text-center text-white relative overflow-hidden shadow-2xl">
                    <div class="absolute top-0 left-0 w-full h-full opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
                    
                    <div class="relative z-10 max-w-2xl mx-auto">
                        <h3 class="text-3xl font-bold mb-4">¿Tienes una propuesta innovadora?</h3>
                        <p class="text-amazon-200 text-lg mb-8">
                            Buscamos constantemente nuevas alianzas para expandir el impacto de estos programas en la región.
                        </p>
                        <a href="/contacto" class="inline-flex items-center gap-2 bg-earth-500 hover:bg-earth-600 text-white font-bold px-8 py-4 rounded-xl transition-all shadow-lg hover:shadow-earth-500/20 hover:-translate-y-1">
                            Contactar al Equipo <ArrowRight size={20} />
                        </a>
                    </div>
                </div>

            </div>
        </section>

        <section id="proyectos" class="py-32 bg-white scroll-mt-20"> 
            <div class="container mx-auto px-4 max-w-6xl">
                <div class="mb-16 flex flex-col md:flex-row md:items-end justify-between gap-6">
                    <div>
                        <span class="text-amazon-600 font-bold uppercase tracking-widest text-sm">Transparencia y Gestión</span>
                        <h2 class="text-4xl md:text-5xl font-extrabold text-amazon-900 mt-3">Proyectos Destacados</h2>
                    </div>
                    <div class="flex gap-3">
                        <span class="px-6 py-2.5 bg-amazon-900 text-white rounded-full text-sm font-bold cursor-pointer shadow-lg">En Ejecución</span>
                        <span class="px-6 py-2.5 bg-gray-100 text-gray-600 rounded-full text-sm font-bold hover:bg-gray-200 cursor-pointer transition">Finalizados</span>
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-2xl overflow-hidden hover:shadow-[0_20px_50px_rgba(0,0,0,0.1)] transition-shadow duration-500">
                    <div class="grid lg:grid-cols-12">
                        
                        <div class="lg:col-span-8 p-10 md:p-14">
                            
                            <div class="flex flex-wrap items-start justify-between gap-6 mb-8">
                                <div>
                                    <div class={`inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide border ${proyectoEjemplo.estadoColor} mb-4`}>
                                        <div class="w-2.5 h-2.5 rounded-full bg-current animate-pulse"></div>
                                        {proyectoEjemplo.estado}
                                    </div>
                                    <h3 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight">{proyectoEjemplo.nombre}</h3>
                                </div>
                                <div class="flex items-center gap-2 text-gray-500 bg-gray-50 px-5 py-3 rounded-xl border border-gray-100">
                                    <MapPin size={20} />
                                    <span class="text-sm font-bold">{proyectoEjemplo.zona}</span>
                                </div>
                            </div>

                            <hr class="border-gray-100 my-10" />

                            <div class="grid md:grid-cols-2 gap-12">
                                <div class="space-y-8">
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <FileText size={20} className="text-earth-500" /> Problema
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.problema}</p>
                                    </div>
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <Target size={20} className="text-earth-500" /> Objetivo
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.objetivo}</p>
                                    </div>
                                </div>

                                <div class="space-y-8">
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <Users size={20} className="text-earth-500" /> Población
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.poblacion}</p>
                                    </div>
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <CheckCircle2 size={20} className="text-earth-500" /> Resultados
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.resultados}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-12 p-8 bg-stone-50 rounded-2xl border border-stone-100">
                                <div class="grid md:grid-cols-2 gap-10">
                                    <div>
                                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-4">Actividades Clave</span>
                                        <ul class="space-y-3">
                                            {proyectoEjemplo.actividades.map(act => (
                                                <li class="flex items-start gap-3 text-gray-700">
                                                    <span class="mt-2 w-1.5 h-1.5 rounded-full bg-amazon-500 shrink-0"></span>
                                                    {act}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                    <div>
                                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-4">Aliados Estratégicos</span>
                                        <div class="flex flex-wrap gap-2">
                                            {proyectoEjemplo.aliados.map(aliado => (
                                                <span class="px-4 py-1.5 bg-white border border-gray-200 rounded-lg text-sm font-semibold text-gray-600 shadow-sm">
                                                    {aliado}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="lg:col-span-4 bg-gray-100 relative min-h-[400px] lg:min-h-full group cursor-pointer">
                            <img 
                                src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?q=80&w=2070&auto=format&fit=crop" 
                                alt="Imagen del proyecto" 
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                            
                            <div class="absolute bottom-10 left-8 right-8 text-center">
                                <button class="w-full py-4 bg-white/20 backdrop-blur-xl border border-white/30 text-white rounded-2xl font-bold hover:bg-white hover:text-amazon-900 transition-all flex items-center justify-center gap-3 shadow-2xl">
                                    Ver Galería
                                    <ChevronRight size={20} />
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                
                <div class="mt-16 text-center">
                    <p class="text-gray-400 font-medium">Mostrando 1 de 8 proyectos activos.</p>
                </div>

            </div>
        </section>

    </main>
</Layout>