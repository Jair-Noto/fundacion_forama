---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';
import { 
    Sprout, 
    Microscope, 
    HeartHandshake, 
    Users, 
    Globe2, 
    MapPin, 
    Target, 
    CheckCircle2, 
    FileText,
    ChevronRight,
    ArrowRight,
    ChevronDown // Importamos la flecha
} from 'lucide-react';

const programas = [
    {
        titulo: "Bosque Vivo",
        desc: "Conservación, restauración y gestión de áreas protegidas.",
        icon: Sprout,
        color: "text-green-600",
        bg: "bg-green-50",
        border: "border-green-200"
    },
    {
        titulo: "Ciencia Amazónica",
        desc: "Monitoreo, biodiversidad, clima y uso de la tierra.",
        icon: Microscope,
        color: "text-blue-600",
        bg: "bg-blue-50",
        border: "border-blue-200"
    },
    {
        titulo: "Bienestar y Territorio",
        desc: "Salud preventiva + educación integral comunitaria.",
        icon: HeartHandshake,
        color: "text-red-600",
        bg: "bg-red-50",
        border: "border-red-200"
    },
    {
        titulo: "Mujeres Líderes",
        desc: "Liderazgo y participación efectiva de la mujer amazónica.",
        icon: Users,
        color: "text-purple-600",
        bg: "bg-purple-50",
        border: "border-purple-200"
    },
    {
        titulo: "Alianzas y Desarrollo",
        desc: "Cadena productiva, fortalecimiento y financiamiento.",
        icon: Globe2,
        color: "text-orange-600",
        bg: "bg-orange-50",
        border: "border-orange-200"
    }
];

const proyectoEjemplo = {
    nombre: "Restauración de Cuencas Manuripi",
    estado: "En ejecución",
    estadoColor: "bg-green-100 text-green-700 border-green-200",
    zona: "Reserva Manuripi, Pando",
    problema: "Degradación de fuentes de agua debido a la erosión y pérdida de cobertura boscosa en zonas críticas.",
    objetivo: "Recuperar 50 hectáreas de bosque ribereño y garantizar el acceso a agua limpia para 3 comunidades.",
    poblacion: "120 familias de comunidades locales.",
    actividades: [
        "Viveros comunales de especies nativas.",
        "Capacitación en sistemas agroforestales.",
        "Monitoreo de calidad de agua."
    ],
    resultados: "30% de aumento en caudal hídrico y reforestación de zonas críticas.",
    aliados: ["WWF Bolivia", "Municipio de Filadelfia", "Comunidades Locales"]
};
---

<Layout title="Programas y Proyectos">
    
    <Navbar client:load transition:persist />

    <main>
        
        <section class="relative h-screen flex items-center justify-center bg-amazon-900 text-white overflow-hidden">
            
            <img 
                src="/imags/material_programas/p.jpg" 
                alt="Proyectos en la Amazonía" 
                class="absolute inset-0 w-full h-full object-cover transform scale-105"
            />
            
            <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/30 to-black/80 z-0"></div>
            
            <div class="relative z-10 container mx-auto px-4 text-center animate-fade-in-up">
                <span class="inline-block py-1.5 px-4 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-green-300 font-bold tracking-widest uppercase text-xs mb-8 shadow-lg">
                    Impacto en Terreno
                </span>
                <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold mb-8 tracking-tight drop-shadow-xl">
                    Programas y Proyectos
                </h1>
                <p class="text-xl md:text-3xl text-gray-200 font-light max-w-3xl mx-auto leading-relaxed text-balance">
                    Estructuramos nuestras acciones bajo 5 programas estratégicos para generar cambios reales en la Amazonía.
                </p>
            </div>

            <div class="absolute bottom-10 z-20 animate-bounce">
                <ChevronDown size={40} className="text-white/70" />
            </div>
        </section>

        <section id="programas" class="py-32 bg-stone-50"> <div class="container mx-auto px-4 max-w-7xl">
                <div class="text-center mb-24"> <h2 class="text-4xl md:text-5xl font-extrabold text-amazon-900 mb-6">Programas Estratégicos</h2>
                    <div class="w-24 h-1.5 bg-earth-500 mx-auto rounded-full mb-6"></div>
                    <p class="text-xl text-gray-600 max-w-2xl mx-auto">Nuestros pilares fundamentales de operación.</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {programas.map((prog) => (
                        <div class={`bg-white p-10 rounded-3xl border ${prog.border} shadow-sm hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 group`}>
                            <div class={`w-16 h-16 ${prog.bg} rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-300`}>
                                <prog.icon size={32} className={prog.color} />
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-3">{prog.titulo}</h3>
                            <p class="text-gray-600 leading-relaxed text-lg">{prog.desc}</p>
                        </div>
                    ))}
                    
                    <div class="bg-amazon-900 p-10 rounded-3xl shadow-xl flex flex-col justify-center items-center text-center text-white border border-amazon-700 hover:-translate-y-2 transition-transform duration-300">
                        <h3 class="text-2xl font-bold mb-3">¿Tienes una idea?</h3>
                        <p class="text-amazon-200 text-lg mb-6">Buscamos constantemente nuevas alianzas para expandir estos programas.</p>
                        <a href="/contacto" class="text-earth-400 font-bold hover:text-white transition-colors flex items-center gap-2 text-lg">
                            Contáctanos <ArrowRight size={20} />
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section id="proyectos" class="py-32 bg-white"> <div class="container mx-auto px-4 max-w-6xl">
                <div class="mb-16 flex flex-col md:flex-row md:items-end justify-between gap-6">
                    <div>
                        <span class="text-amazon-600 font-bold uppercase tracking-widest text-sm">Transparencia y Gestión</span>
                        <h2 class="text-4xl md:text-5xl font-extrabold text-amazon-900 mt-3">Proyectos Destacados</h2>
                    </div>
                    <div class="flex gap-3">
                        <span class="px-6 py-2.5 bg-amazon-900 text-white rounded-full text-sm font-bold cursor-pointer shadow-lg">En Ejecución</span>
                        <span class="px-6 py-2.5 bg-gray-100 text-gray-600 rounded-full text-sm font-bold hover:bg-gray-200 cursor-pointer transition">Finalizados</span>
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-2xl overflow-hidden hover:shadow-[0_20px_50px_rgba(0,0,0,0.1)] transition-shadow duration-500">
                    <div class="grid lg:grid-cols-12">
                        
                        <div class="lg:col-span-8 p-10 md:p-14">
                            
                            <div class="flex flex-wrap items-start justify-between gap-6 mb-8">
                                <div>
                                    <div class={`inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide border ${proyectoEjemplo.estadoColor} mb-4`}>
                                        <div class="w-2.5 h-2.5 rounded-full bg-current animate-pulse"></div>
                                        {proyectoEjemplo.estado}
                                    </div>
                                    <h3 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight">{proyectoEjemplo.nombre}</h3>
                                </div>
                                <div class="flex items-center gap-2 text-gray-500 bg-gray-50 px-5 py-3 rounded-xl border border-gray-100">
                                    <MapPin size={20} />
                                    <span class="text-sm font-bold">{proyectoEjemplo.zona}</span>
                                </div>
                            </div>

                            <hr class="border-gray-100 my-10" />

                            <div class="grid md:grid-cols-2 gap-12">
                                <div class="space-y-8">
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <FileText size={20} className="text-earth-500" /> Problema
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.problema}</p>
                                    </div>
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <Target size={20} className="text-earth-500" /> Objetivo
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.objetivo}</p>
                                    </div>
                                </div>

                                <div class="space-y-8">
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <Users size={20} className="text-earth-500" /> Población
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.poblacion}</p>
                                    </div>
                                    <div>
                                        <h4 class="flex items-center gap-2.5 font-bold text-amazon-900 mb-3 text-lg">
                                            <CheckCircle2 size={20} className="text-earth-500" /> Resultados
                                        </h4>
                                        <p class="text-gray-600 leading-relaxed">{proyectoEjemplo.resultados}</p>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-12 p-8 bg-stone-50 rounded-2xl border border-stone-100">
                                <div class="grid md:grid-cols-2 gap-10">
                                    <div>
                                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-4">Actividades Clave</span>
                                        <ul class="space-y-3">
                                            {proyectoEjemplo.actividades.map(act => (
                                                <li class="flex items-start gap-3 text-gray-700">
                                                    <span class="mt-2 w-1.5 h-1.5 rounded-full bg-amazon-500 shrink-0"></span>
                                                    {act}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                    <div>
                                        <span class="text-xs font-bold text-gray-400 uppercase tracking-wider block mb-4">Aliados Estratégicos</span>
                                        <div class="flex flex-wrap gap-2">
                                            {proyectoEjemplo.aliados.map(aliado => (
                                                <span class="px-4 py-1.5 bg-white border border-gray-200 rounded-lg text-sm font-semibold text-gray-600 shadow-sm">
                                                    {aliado}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="lg:col-span-4 bg-gray-100 relative min-h-[400px] lg:min-h-full group cursor-pointer">
                            <img 
                                src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?q=80&w=2070&auto=format&fit=crop" 
                                alt="Imagen del proyecto" 
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110"
                            />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                            
                            <div class="absolute bottom-10 left-8 right-8 text-center">
                                <button class="w-full py-4 bg-white/20 backdrop-blur-xl border border-white/30 text-white rounded-2xl font-bold hover:bg-white hover:text-amazon-900 transition-all flex items-center justify-center gap-3 shadow-2xl">
                                    Ver Galería
                                    <ChevronRight size={20} />
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                
                <div class="mt-16 text-center">
                    <p class="text-gray-400 font-medium">Mostrando 1 de 8 proyectos activos.</p>
                </div>

            </div>
        </section>

    </main>
</Layout>