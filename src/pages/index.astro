---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/shared/Navbar.jsx';
import HeroCarousel from '../components/HeroCarousel.jsx'; // Tu carrusel

import { 
    ArrowRight, 
    Leaf, 
    Users, 
    Microscope, 
    Globe2, 
    ChevronDown, 
    HeartHandshake,
    MapPin, 
    X, 
    Map as MapIcon
} from 'lucide-react';

// Datos de impacto (Estadísticas)
const estadisticas = [
    { numero: "+50k", texto: "Hectáreas Conservadas", icon: Leaf },
    { numero: "12", texto: "Comunidades Aliadas", icon: Users },
    { numero: "25", texto: "Proyectos Científicos", icon: Microscope },
    { numero: "100%", texto: "Transparencia", icon: Globe2 },
];
---

<Layout title="Inicio">
    
    <Navbar client:load transition:persist />

    <main>
        
        <section class="relative h-screen flex items-center justify-center bg-amazon-900 text-white overflow-hidden">

            <video 
                autoplay 
                loop 
                muted 
                playsinline 
                poster="/videos/poster-video.jpg" 
                class="absolute inset-0 w-full h-full object-cover z-0"
            >
                <source src="/videos/forama.mp4" type="video/mp4" />
            </video>
        
            <div class="absolute inset-0 bg-black/50 z-10"></div>
            
            <div class="relative z-20 container mx-auto px-4 text-center mt-8 animate-fade-in-up">
                
                <span class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md border border-white/20 text-white text-sm font-semibold px-4 py-1.5 rounded-full mb-8 tracking-wide uppercase shadow-sm">
                    <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
                    Pando, Bolivia
                </span>

                <HeroCarousel client:load />
                
                <p class="mt-8 text-xl md:text-2xl text-gray-100 font-light drop-shadow-md max-w-3xl mx-auto leading-relaxed text-balance">
                    Uniendo ciencia, comunidad y conservación en el corazón del bosque.
                </p>

            </div>

            <div class="absolute bottom-10 z-20 animate-bounce">
                <ChevronDown size={40} className="text-white/70" />
            </div>
        </section>

        <section class="bg-amazon-900 py-16 border-t border-white/10 relative z-20">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center divide-x divide-white/10 scroll-trigger opacity-0 translate-y-10 transition-all duration-1000">
                    {estadisticas.map((stat) => (
                        <div class="p-4 group cursor-default">
                            <div class="flex justify-center mb-4 text-earth-400 group-hover:scale-110 transition-transform">
                                <stat.icon size={32} />
                            </div>
                            <h3 class="text-4xl md:text-5xl font-extrabold text-white mb-2">{stat.numero}</h3>
                            <p class="text-amazon-200 text-sm font-bold uppercase tracking-wider">{stat.texto}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <section class="py-32 bg-stone-50 scroll-trigger opacity-0 translate-y-20 transition-all duration-1000">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="grid md:grid-cols-2 gap-16 items-center">
                    
                    <div class="space-y-8">
                        <span class="inline-block py-1 px-3 rounded-full bg-earth-100 text-earth-700 text-xs font-bold uppercase tracking-widest">
                            Nuestra Esencia
                        </span>
                        <h2 class="text-4xl md:text-5xl font-extrabold text-amazon-900 leading-tight">
                            Conservar no es prohibir, es <span class="text-earth-600">saber convivir</span>.
                        </h2>
                        <p class="text-lg text-gray-600 leading-relaxed text-pretty">
                            FORAMA Amazónica es una entidad privada sin fines de lucro, orientada a promover el desarrollo sostenible mediante planificación, salud, educación e investigación científica.
                        </p>
                        
                        <div class="flex flex-wrap gap-4 pt-4">
                            <a href="/quienes-somos" class="inline-flex items-center gap-2 bg-amazon-900 text-white px-8 py-4 rounded-xl font-bold hover:bg-amazon-800 transition-all shadow-lg hover:translate-x-1">
                                Conocer FORAMA <ArrowRight size={20} />
                            </a>
                            <a href="/programas" class="inline-flex items-center gap-2 bg-white border border-gray-200 text-amazon-900 px-8 py-4 rounded-xl font-bold hover:bg-gray-50 transition-all">
                                Ver Programas
                            </a>
                        </div>
                    </div>

                    <div class="relative">
                        <img 
                            src="/public/imags/campo.jpg"
                            alt="Trabajo en campo" 
                            class="rounded-[2.5rem] shadow-2xl w-full object-cover h-[800px] hover:scale-[1.01] transition-transform duration-500"
                        />
                    </div>

                </div>
            </div>
        </section>

        <section class="py-32 bg-white scroll-trigger opacity-0 translate-y-20 transition-all duration-1000">
            <div class="container mx-auto px-4 max-w-7xl">
                <div class="text-center mb-20">
                    <h2 class="text-4xl font-extrabold text-amazon-900 mb-4">Nuestros Pilares</h2>
                    <div class="w-20 h-1.5 bg-earth-500 mx-auto rounded-full"></div>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    <div class="group relative overflow-hidden rounded-[2rem] h-[400px] cursor-pointer shadow-lg hover:shadow-2xl transition-all">
                        <img src="/public/imags/bq.jpg" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                        <div class="absolute inset-0 bg-gradient-to-t from-amazon-900/90 via-amazon-900/40 to-transparent"></div>
                        <div class="absolute bottom-0 p-8 text-white">
                            <Leaf className="mb-4 text-earth-400" size={32} />
                            <h3 class="text-2xl font-bold mb-2">Bosque Vivo</h3>
                            <p class="text-gray-200 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 translate-y-4 group-hover:translate-y-0">
                                Conservación estricta y gestión de áreas protegidas.
                            </p>
                            <a href="/quienes-somos" class="inline-block mt-4 text-earth-300 font-bold text-sm hover:text-white">Ver más →</a>
                        </div>
                    </div>
                    <div class="group relative overflow-hidden rounded-[2rem] h-[400px] cursor-pointer shadow-lg hover:shadow-2xl transition-all">
                        <img src="/public/imags/ciencia.jpg" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                        <div class="absolute inset-0 bg-gradient-to-t from-amazon-900/90 via-amazon-900/40 to-transparent"></div>
                        <div class="absolute bottom-0 p-8 text-white">
                            <Microscope className="mb-4 text-blue-400" size={32} />
                            <h3 class="text-2xl font-bold mb-2">Ciencia Amazónica</h3>
                            <p class="text-gray-200 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 translate-y-4 group-hover:translate-y-0">
                                Investigación, monitoreo y generación de datos.
                            </p>
                            <a href="/que-hacemos" class="inline-block mt-4 text-blue-300 font-bold text-sm hover:text-white">Ver más →</a>
                        </div>
                    </div>
                    <div class="group relative overflow-hidden rounded-[2rem] h-[400px] cursor-pointer shadow-lg hover:shadow-2xl transition-all">
                        <img src="/public/imags/bienestar.jpg" class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
                        <div class="absolute inset-0 bg-gradient-to-t from-amazon-900/90 via-amazon-900/40 to-transparent"></div>
                        <div class="absolute bottom-0 p-8 text-white">
                            <HeartHandshake className="mb-4 text-red-400" size={32} />
                            <h3 class="text-2xl font-bold mb-2">Bienestar Social</h3>
                            <p class="text-gray-200 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 translate-y-4 group-hover:translate-y-0">
                                Salud, educación y fortalecimiento comunitario.
                            </p>
                            <a href="/programas" class="inline-block mt-4 text-red-300 font-bold text-sm hover:text-white">Ver más →</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

<section class="relative h-auto min-h-[950px] md:h-screen flex items-center justify-center overflow-hidden group">   
    <img 
        src="/imags/pando_cobija.jpg" 
        alt="Fondo Pando" 
        class="absolute inset-0 w-full h-full object-cover object-center z-0"

    />
    <div class="absolute inset-0 bg-[url('/imags/pattern.png')] opacity-10 mix-blend-overlay z-0"></div>


    <div class="container mx-auto px-4 relative z-10 max-w-4xl text-center">
        
        <div class="inline-flex items-center gap-3 px-4 py-2 rounded-full bg-white/10 border border-white/20 backdrop-blur-md animate-fade-in-up mb-8">
            <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-green-500"></span>
            </span>
            <span class="text-green-300 font-bold uppercase tracking-[0.2em] text-xs">El Corazón del Bosque</span>
        </div>

        <h2 class="text-5xl md:text-7xl font-extrabold text-white leading-tight drop-shadow-2xl mb-8 tracking-tight">
            Operamos desde<br>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-400 via-emerald-300 to-teal-500">
                Lo Profundo de Pando
            </span>
        </h2>

        <p class="text-xl md:text-2xl text-gray-100 leading-relaxed font-light max-w-2xl mx-auto mb-12 drop-shadow-md text-balance">
            Nuestra base está en <strong class="text-white font-semibold">Cobija</strong>, inmersa en el ecosistema que protegemos. Conectamos la realidad local con el impacto global.
        </p>

        <button id="openMapBtn" class="group relative inline-flex items-center gap-3 bg-white/10 hover:bg-green-600 backdrop-blur-md border-2 border-white/30 hover:border-green-500 text-white font-bold py-4 px-8 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg overflow-hidden">
            <span class="absolute inset-0 bg-gradient-to-r from-green-600/0 via-green-600/50 to-green-600/0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-shimmer"></span>
            <MapIcon size={24} />
            <span class="relative z-10 tracking-wider">Ver Ubicación en Mapa</span>
        </button>

    </div>

    <div id="mapModal" class="fixed inset-0 z-50 hidden items-center justify-center p-4 md:p-8 animate-fade-in">
        
        <div id="modalOverlay" class="absolute inset-0 bg-black/80 backdrop-blur-sm"></div>

        <div class="relative w-full max-w-4xl bg-amazon-900 rounded-[2.5rem] overflow-hidden shadow-2xl border border-white/20 transform scale-95 opacity-0 transition-all duration-300 modal-content">
            
            <button id="closeMapBtn" class="absolute top-4 right-4 z-20 w-10 h-10 bg-black/50 hover:bg-red-600 text-white rounded-full flex items-center justify-center transition-colors backdrop-blur-md">
                <X size={24} />
            </button>

            <div class="relative w-full h-[60vh] md:h-[70vh]">
                 <iframe 
                    src="https://maps.google.com/maps?q=Calle+Graciela+P%C3%A9rez+055%2C+Barrio+Nazaria%2C+Cobija%2C+Bolivia&t=&z=16&ie=UTF8&iwloc=&output=embed" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"
                    title="Mapa de Cobija, Pando - FORAMA"
                    class="w-full h-full grayscale-[20%] hover:grayscale-0 transition-all duration-700 invert-[0.05]"
                ></iframe>
                 
                 <div class="absolute bottom-6 left-6 bg-amazon-950/90 backdrop-blur-xl border border-white/10 p-4 rounded-2xl flex items-center gap-4 shadow-lg pointer-events-none">
                    <div class="w-12 h-12 rounded-full bg-green-500/20 flex items-center justify-center text-green-400 shrink-0">
                        <MapPin size={24} />
                    </div>
                    <div>
                        <p class="text-xs text-gray-400 font-bold uppercase tracking-wider">Base Operativa</p>
                        <p class="text-white font-bold text-lg">Cobija, Bolivia</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes shimmer {
        0% { transform: translateX(-100%); }
        100% { transform: translateX(100%); }
    }
    .animate-shimmer {
        animation: shimmer 2s infinite;
    }
    /* Clases para la animación de entrada del modal */
    .modal-active .modal-content {
        transform: scale(100%);
        opacity: 1;
    }
</style>

    <script>
        document.addEventListener('astro:page-load', () => {
            // El signo "!" al final le jura a VS Code que el elemento existe
            const openBtn = document.getElementById('openMapBtn');
            const closeBtn = document.getElementById('closeMapBtn');
            const modal = document.getElementById('mapModal');
            const overlay = document.getElementById('modalOverlay');

            // Verificamos que todo exista antes de crear las funciones
            if (openBtn && closeBtn && modal && overlay) {

                // Definimos las funciones AQUÍ ADENTRO para que usen las variables seguras
                const openModal = () => {
                    modal.classList.remove('hidden');
                    modal.classList.add('flex');
                    setTimeout(() => {
                        modal.classList.add('modal-active');
                    }, 10);
                };

                const closeModal = () => {
                    modal.classList.remove('modal-active');
                    setTimeout(() => {
                        modal.classList.remove('flex');
                        modal.classList.add('hidden');
                    }, 300);
                };

                // Asignamos los eventos
                openBtn.addEventListener('click', openModal);
                closeBtn.addEventListener('click', closeModal);
                overlay.addEventListener('click', closeModal);
            }
        });
</script>
     
        <section class="relative py-32 overflow-hidden scroll-trigger">
            
            <img 
                src="/imags/amazonas.jpg" 
                alt="Apoya la conservación en Pando" 
                class="absolute inset-0 w-full h-full object-cover animate-slow-zoom"
            />
            
            <div class="absolute inset-0 bg-gradient-to-tr from-earth-950 via-amazon-900/80 to-earth-900/70 mix-blend-multiply"></div>
            
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-96 bg-orange-500/20 rounded-full blur-[120px] pointer-events-none"></div>

            <div class="container mx-auto px-4 relative z-10 text-center">
                
                <h2 class="text-4xl md:text-6xl font-extrabold text-white mb-8 tracking-tight leading-tight scroll-element fade-up opacity-0 translate-y-10 drop-shadow-xl">
                    Tu apoyo <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-300 to-yellow-200">germina</span> en el bosque
                </h2>
                
                <p class="text-xl text-orange-100 max-w-3xl mx-auto leading-relaxed font-light mb-12 scroll-element fade-up delay-100 opacity-0 translate-y-10 drop-shadow-md">
                    Cada donación se convierte directamente en equipos para guardaparques, insumos médicos para comunidades y herramientas para la investigación científica.
                </p>
                
                <div class="flex flex-col sm:flex-row items-center justify-center gap-6 scroll-element fade-up delay-200 opacity-0 translate-y-10">
                    
                    <a href="/como-apoyar" class="group relative overflow-hidden bg-gradient-to-r from-earth-500 to-orange-600 text-white font-bold text-lg py-4 px-10 rounded-2xl shadow-2xl hover:shadow-orange-500/50 hover:scale-105 transition-all duration-300">
                        <span class="relative z-10 flex items-center gap-2">
                            Hacer una Donación
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/80 group-hover:text-white group-hover:fill-current transition-all"><path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/></svg>
                        </span>
                        <div class="absolute inset-0 bg-white/20 scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-500"></div>
                    </a>
                    
                    <a href="/voluntariado" class="group relative overflow-hidden bg-white/10 backdrop-blur-md text-white font-bold text-lg py-4 px-10 rounded-2xl border-2 border-white/30 hover:bg-white/20 hover:border-white/50 transition-all duration-300 hover:scale-105">
                         <span class="relative z-10 flex items-center gap-2">
                            Ser Voluntario
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white/80 group-hover:text-white transition-all"><path d="m11 17 2 2a1 1 0 1 0 3-3"/><path d="m14 14 2.5 2.5a1 1 0 1 0 3-3l-3.88-3.88a3 3 0 0 0-4.24 0l-.88.88a1 1 0 1 1-3-3l2.81-2.81a5.79 5.79 0 0 1 7.06-.87l.47.28a2 2 0 0 0 1.42.25L21 4"/><path d="m21 3 1 11h-2"/><path d="M3 3 2 14l6.5 6.5a1 1 0 1 0 3-3"/></svg>
                         </span>
                    </a>

                </div>

            </div>
        </section>

    </main>
    
    

</Layout>

<script>
    document.addEventListener('astro:page-load', () => {

        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1 
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // 1. Animar el contenedor principal (si tiene animación)
                    entry.target.classList.remove('opacity-0', 'translate-y-20');
                    entry.target.classList.add('opacity-100', 'translate-y-0');

                    // 2. BUSCAR Y ANIMAR LOS HIJOS (.scroll-element)
                    // Esto es lo que faltaba para que aparezcan las letras
                    const children = entry.target.querySelectorAll('.scroll-element');
                    children.forEach((child) => {
                        child.classList.remove('opacity-0', 'translate-y-10');
                        child.classList.add('opacity-100', 'translate-y-0');
                    });

                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observamos todas las secciones que tengan la clase .scroll-trigger
        document.querySelectorAll('.scroll-trigger').forEach((section) => {
            observer.observe(section);
        });
        
    });
