<script>
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('newsletter-form') as HTMLFormElement;
    const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
    const nameInput = document.getElementById('newsletter-name') as HTMLInputElement;
    const submitBtn = document.getElementById('newsletter-btn') as HTMLButtonElement;
    const btnText = document.getElementById('newsletter-btn-text') as HTMLElement;
    const spinner = document.getElementById('newsletter-spinner') as HTMLElement;
    const messageDiv = document.getElementById('newsletter-message') as HTMLElement;

    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const email = emailInput.value.trim();
      const nombre = nameInput.value.trim();

      // Validación básica
      if (!email) {
        mostrarMensaje('Por favor ingresa tu email', 'error');
        return;
      }

      // Validación de formato de email
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailRegex.test(email)) {
        mostrarMensaje('Por favor ingresa un email válido', 'error');
        return;
      }

      // Deshabilitar botón y mostrar spinner
      submitBtn.disabled = true;
      btnText.textContent = 'Suscribiendo...';
      spinner.classList.remove('hidden');

      try {
        const response = await fetch('/api/subscribe-newsletter', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ email, nombre }),
        });

        const data = await response.json();

        if (response.ok && data.success) {
          mostrarMensaje(
            '✅ ¡Suscripción exitosa! Revisa tu correo.',
            'success'
          );
          form.reset();
        } else {
          // Email cancelado
          if (data.tipo === 'email_cancelado') {
            mostrarMensaje(
              '⚠️ Este correo canceló su suscripción anteriormente. La función de re-suscripción estará disponible próximamente.',
              'warning'
            );
          } 
          // Email ya registrado
          else if (data.tipo === 'ya_registrado') {
            mostrarMensaje(
              'ℹ️ Este correo electrónico ya está registrado en nuestro boletín.',
              'info'
            );
          }
          // Otros errores
          else {
            mostrarMensaje(
              data.error || 'Hubo un error al suscribirte. Intenta de nuevo.',
              'error'
            );
          }
        }
      } catch (error) {
        console.error('Error:', error);
        mostrarMensaje(
          'Error de conexión. Por favor verifica tu internet e intenta de nuevo.',
          'error'
        );
      } finally {
        // Restaurar botón
        submitBtn.disabled = false;
        btnText.textContent = 'Suscribirme Gratis';
        spinner.classList.add('hidden');
      }
    });

    function mostrarMensaje(mensaje: string, tipo: 'success' | 'error' | 'warning' | 'info') {
      messageDiv.classList.remove('hidden');
      
      // Estilos según tipo de mensaje
      const estilos = {
        success: 'p-5 bg-green-500/20 border-2 border-green-500/50 rounded-2xl backdrop-blur-sm',
        error: 'p-5 bg-red-500/20 border-2 border-red-500/50 rounded-2xl backdrop-blur-sm',
        warning: 'p-5 bg-amber-500/20 border-2 border-amber-500/50 rounded-2xl backdrop-blur-sm',
        info: 'p-5 bg-blue-500/20 border-2 border-blue-500/50 rounded-2xl backdrop-blur-sm'
      };
      
      messageDiv.className = estilos[tipo];
      messageDiv.innerHTML = `
        <p class="text-white font-semibold text-center leading-relaxed">${mensaje}</p>
      `;

      // Auto-ocultar después de 10 segundos
      setTimeout(() => {
        messageDiv.classList.add('hidden');
      }, 10000);

      // Scroll suave al mensaje
      messageDiv.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
  });
</script>

